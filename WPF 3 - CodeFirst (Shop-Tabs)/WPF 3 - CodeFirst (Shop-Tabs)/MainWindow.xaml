<Window x:Class="WPF_3___CodeFirst__Shop_Tabs_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_3___CodeFirst__Shop_Tabs_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Products">
                <DataGrid x:Name="dgProducts"></DataGrid>
            </TabItem>
            <TabItem Header="Clients">
                <DataGrid x:Name="dgClients"></DataGrid>
            </TabItem>
            <TabItem Header="Orders">
                <DataGrid x:Name="dgOrders"></DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
